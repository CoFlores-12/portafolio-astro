---
// src/pages/index.astro
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Obtener proyectos recientes
const projects = (await getCollection('work'))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);
---

<BaseLayout>
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title" id="typewriter">Cesar Flores Autónoma</h1>
        <h2 class="hero-subtitle">Ingeniero en Sistemas · Especialista en Desarrollo Web</h2>
        <p class="hero-description">Construyendo soluciones digitales innovadoras con tecnología de punta.</p>
        <div class="hero-actions">
          <a href="#projects" class="primary-button">
            Ver mi trabajo
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M5 13h11.17l-4.88 4.88c-.39.39-.39 1.03 0 1.42.39.39 1.02.39 1.41 0l6.59-6.59c.39-.39.39-1.02 0-1.41l-6.58-6.6c-.39-.39-1.02-.39-1.41 0-.39.39-.39 1.02 0 1.41L16.17 11H5c-.55 0-1 .45-1 1s.45 1 1 1z"/>
            </svg>
          </a>
          <a href="/cv" class="secondary-button">
            Mi CV
          </a>
        </div>
      </div>
      <div class="hero-image">
        <div class="tech-bubble bubble-1">React</div>
        <div class="tech-bubble bubble-2">Node.js</div>
        <div class="tech-bubble bubble-3">Mongo</div>
        <div class="tech-bubble bubble-4">Python</div>
        <div class="tech-bubble bubble-5">NextJS</div>
        <div class="profile-image">
          <!-- Reemplaza con tu imagen -->
          <img src="/pf2.png" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de Especialidades -->
  <section class="specialties-section" id="skills">
    <div class="container">
      <h2 class="section-title">Mis <span class="highlight">Habilidades</span></h2>
      <div class="specialties-grid">
        <div class="specialty-card" data-aos="fade-up">
          <div class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M3 3h18v18H3V3zm16 16V5H5v14h14zM7 7h10v2H7V7zm0 4h10v2H7v-2zm0 4h7v2H7v-2z"/>
            </svg>
          </div>
          <h3>Frontend Avanzado</h3>
          <p>React, Next.js, Astro, TailwindCSS y diseño responsive</p>
        </div>
        
        <div class="specialty-card" data-aos="fade-up" data-aos-delay="100">
          <div class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20 3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM8 19H4v-2h4v2zm0-4H4v-2h4v2zm0-4H4V9h4v2zm0-4H4V5h4v2zm6 12h-4v-2h4v2zm0-4h-4v-2h4v2zm0-4h-4V9h4v2zm0-4h-4V5h4v2zm6 12h-4v-2h4v2zm0-4h-4v-2h4v2zm0-4h-4V9h4v2zm0-4h-4V5h4v2z"/>
            </svg>
          </div>
          <h3>Backend Robusto</h3>
          <p>Node.js, Python, Java, bases de datos SQL y NoSQL</p>
        </div>
        
        <div class="specialty-card" data-aos="fade-up" data-aos-delay="200">
          <div class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
            </svg>
          </div>
          <h3>DevOps & Cloud</h3>
          <p>Docker, Kubernetes, AWS, CI/CD pipelines</p>
        </div>
      </div>
    </div>
  </section>

  

  <!-- Tech Stack -->
  <section class="tech-section">
    <div class="container">
      <h2 class="section-title">Mi <span class="highlight">Tech Stack</span></h2>
      <div class="tech-grid">
        <div class="tech-category" data-aos="fade-up">
          <h3>Frontend</h3>
          <div class="tech-items">
            <div class="tech-item">React</div>
            <div class="tech-item">Next.js</div>
            <div class="tech-item">Astro</div>
            <div class="tech-item">TailwindCSS</div>
            <div class="tech-item">TypeScript</div>
          </div>
        </div>
        
        <div class="tech-category" data-aos="fade-up" data-aos-delay="100">
          <h3>Backend</h3>
          <div class="tech-items">
            <div class="tech-item">Node.js</div>
            <div class="tech-item">Python</div>
            <div class="tech-item">Java</div>
            <div class="tech-item">Express</div>
            <div class="tech-item">Spring Boot</div>
          </div>
        </div>
        
        <div class="tech-category" data-aos="fade-up" data-aos-delay="200">
          <h3>DevOps & Cloud</h3>
          <div class="tech-items">
            <div class="tech-item">Docker</div>
            <div class="tech-item">Kubernetes</div>
            <div class="tech-item">AWS</div>
            <div class="tech-item">GitHub Actions</div>
            <div class="tech-item">Terraform</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Proyectos Destacados -->
  <section class="projects-section" id="projects">
    <div class="container">
      <h2 class="section-title">Proyectos <span class="highlight">Destacados</span></h2>
      <div class="projects-grid">
        {projects.map((project, index) => (
          <article class="project-card" data-aos="fade-up" data-aos-delay={index * 100}>
            <div class="project-image">
              <img src={project.data.img || '/images/project-placeholder.jpg'} alt={project.data.title} />
            </div>
            <div class="project-content">
              <h3>{project.data.title}</h3>
              <p>{project.data.description}</p>
              <div class="project-tags">
                {project.data.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <a href={`/work/${project.slug}`} class="project-link">
                Ver detalles
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M5 13h11.17l-4.88 4.88c-.39.39-.39 1.03 0 1.42.39.39 1.02.39 1.41 0l6.59-6.59c.39-.39.39-1.02 0-1.41l-6.58-6.6c-.39-.39-1.02-.39-1.41 0-.39.39-.39 1.02 0 1.41L16.17 11H5c-.55 0-1 .45-1 1s.45 1 1 1z"/>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
      <div class="projects-cta" data-aos="fade-up">
        <a href="/work" class="primary-button">
          Ver todos los proyectos
        </a>
      </div>
    </div>
  </section>


</BaseLayout>

<style>
  /* Variables de diseño */
  :root {
    --primary: #2563eb;
    --primary-dark: #1d4ed8;
    --secondary: #7c3aed;
    --dark: #1e293b;
    --light: #f8fafc;
    --gray: #94a3b8;
    --success: #10b981;
    --warning: #f59e0b;
    --error: #ef4444;
    
    --max-width: 1200px;
    --border-radius: 12px;
    --box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --transition: all 0.3s ease;
  }

  /* Estilos base */
  .container {
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 3rem;
    color: var(--dark);
    position: relative;
    display: inline-block;
  }

  .section-title .highlight {
    color: var(--primary);
    position: relative;
  }

  .section-title .highlight::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
    border-radius: 3px;
  }

  /* Botones */
  .primary-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    border-radius: var(--border-radius);
    font-weight: 600;
    text-decoration: none;
    transition: var(--transition);
    box-shadow: var(--box-shadow);
    border: none;
    cursor: pointer;
  }

  .primary-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .primary-button svg {
    width: 20px;
    height: 20px;
    transition: var(--transition);
  }

  .primary-button:hover svg {
    transform: translateX(3px);
  }

  .secondary-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: transparent;
    color: var(--primary);
    border-radius: var(--border-radius);
    font-weight: 600;
    text-decoration: none;
    transition: var(--transition);
    border: 2px solid var(--primary);
  }

  .secondary-button:hover {
    background: rgba(37, 99, 235, 0.1);
  }

  /* Hero Section */
  .hero-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  }

  .hero-content {
    max-width: 600px;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--dark);
  }

  .hero-subtitle {
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--primary-dark);
    margin-bottom: 1.5rem;
  }

  .hero-description {
    font-size: 1.2rem;
    line-height: 1.6;
    color: var(--dark);
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .hero-image {
    position: relative;
    width: 100%;
    max-width: 500px;
  }

  .profile-image {
    position: relative;
    width: 350px;
    height: 350px;
    border-radius: 50%;
    background: #e0e7ff;
    overflow: hidden;
    margin: 0 auto;
    border: 8px solid white;
    box-shadow: var(--box-shadow);
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
  }

  .tech-bubble {
    position: absolute;
    background: white;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    box-shadow: var(--box-shadow);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .bubble-1 {
    top: 10%;
    left: 12%;
    animation: float 6s ease-in-out infinite;
  }

  .bubble-2 {
    top: 30%;
    right: 0;
    animation: float 7s ease-in-out infinite 1s;
  }

  .bubble-3 {
    bottom: 20%;
    left: 5%;
    animation: float 5s ease-in-out infinite 0.5s;
  }

  .bubble-4 {
    bottom: 10%;
    right: 10%;
    animation: float 6.5s ease-in-out infinite 1.5s;
  }
  .bubble-5 {
    top: 1%;
    right: 20%;
    animation: float 6.5s ease-in-out infinite 1.5s;
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
    100% { transform: translateY(0px); }
  }

  /* Sección de Especialidades */
  .specialties-section {
    padding: 5rem 0;
    background-color: var(--light);
  }

  .specialties-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .specialty-card {
    background: white;
    padding: 2rem;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    transition: var(--transition);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .specialty-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .specialty-card .icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border-radius: 50%;
    margin-bottom: 1.5rem;
  }

  .specialty-card .icon svg {
    width: 30px;
    height: 30px;
    color: white;
  }

  .specialty-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--dark);
  }

  .specialty-card p {
    color: var(--gray);
    line-height: 1.6;
  }

  /* Tech Stack Section */
  .tech-section {
    padding: 5rem 0;
    background: white;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .tech-category {
    background: var(--light);
    padding: 1.5rem;
    border-radius: var(--border-radius);
  }

  .tech-category h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--primary-dark);
  }

  .tech-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-item {
    background: white;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.9rem;
    box-shadow: var(--box-shadow);
  }

  /* Projects Section */
  .projects-section {
    padding: 5rem 0;
    background: var(--light);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .project-card {
    background: white;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--box-shadow);
    transition: var(--transition);
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .project-image {
    height: 200px;
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-content {
    padding: 1.5rem;
  }

  .project-content h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--dark);
  }

  .project-content p {
    color: var(--gray);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    background: #e0e7ff;
    color: var(--primary-dark);
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    font-weight: 600;
    text-decoration: none;
  }

  .project-link svg {
    width: 16px;
    height: 16px;
    transition: var(--transition);
  }

  .project-link:hover svg {
    transform: translateX(3px);
  }

  .projects-cta {
    text-align: center;
  }

  /* Contact Section */
  .contact-section {
    padding: 5rem 0;
    background: var(--dark);
    color: white;
  }

  .contact-section .section-title {
    color: white;
  }

  .contact-section .highlight {
    color: #38bdf8;
  }

  .contact-content {
    max-width: 500px;
  }

  .contact-content p {
    margin-bottom: 2rem;
    line-height: 1.6;
    color: var(--gray);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .contact-item svg {
    width: 24px;
    height: 24px;
    color: var(--primary);
  }

  .contact-form {
    background: white;
    padding: 2rem;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--dark);
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #e2e8f0;
    border-radius: var(--border-radius);
    font-family: inherit;
    transition: var(--transition);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .form-group textarea {
    min-height: 150px;
    resize: vertical;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .hero-section .container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      align-items: center;
      gap: 3rem;
    }

    .contact-section .container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      align-items: center;
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .hero-actions {
      flex-direction: column;
    }

    .section-title {
      font-size: 2rem;
    }
  }
</style>

<script is:inline>
  // Efecto de escritura
  document.addEventListener('DOMContentLoaded', () => {
    
    
    // Inicializar AOS si está cargado
    if (typeof AOS !== 'undefined') {
      AOS.init({
        duration: 800,
        easing: 'ease-in-out',
        once: true
      });
    }
  });
</script>